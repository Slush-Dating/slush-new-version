{
  "name": "slush-dating-workspace",
  "private": true,
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
    "build:staging": "npm run build:staging -w web",
    "web:dev": "npm run dev -w web",
    "web:build": "npm run build -w web",
    "web:build:staging": "npm run build:staging -w web",
    "web:cap:ios:staging": "npm run cap:ios:staging -w web",
    "web:cap:android:staging": "npm run cap:android:staging -w web",
    "web:build:ios:staging": "npm run build:ios:staging -w web",
    "native:start": "cd native && npm run start",
    "native:ios": "cd native && npm run ios",
    "native:android": "cd native && npm run android",
    "server:dev": "npm run dev -w server",
    "install:all": "npm install && cd native && npm install"
  }
}